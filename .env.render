# Production Environment Variables for Render (Backend)
# Set these in Render Dashboard -> Service Settings -> Environment Variables

# Database
DATABASE_URL=postgresql://username:password@host:port/database_name

# Redis (if using Render Redis or external)
REDIS_URL=redis://username:password@host:port

# CORS Configuration
CORS_ORIGIN=https://your-vercel-app.vercel.app

# JWT Secret for authentication
JWT_SECRET=your_super_secure_jwt_secret_here

# Node Environment
NODE_ENV=production

# Server Port (Render uses PORT automatically)
PORT=3001

# Optional: Session Configuration
SESSION_SECRET=your_session_secret_here

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
